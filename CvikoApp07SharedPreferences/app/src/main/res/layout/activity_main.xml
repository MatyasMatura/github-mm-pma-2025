<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="600dp"/>

    <Button
        android:id="@+id/btnFragment1"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:text="Notebook"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        />

    <Button
        android:id="@+id/btnFragment2"
        android:layout_width="160dp"
        android:text="Desktop PC"
        android:textSize="20sp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        />

    <Button
        android:id="@+id/btnFragment3"
        android:layout_width="160dp"
        android:text="Tablet"
        android:textSize="20sp"
        android:layout_height="60dp"
        android:layout_below="@id/btnFragment2"
        android:layout_alignParentStart="true"
        />

    <Button
        android:id="@+id/btnFragment4"
        android:layout_width="160dp"
        android:text="Telefon"
        android:textSize="20sp"
        android:layout_height="60dp"
        android:layout_below="@id/btnFragment2"
        android:layout_alignParentEnd="true"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/btnFragment4"
        android:text="Uživatel si vybral zařízení:"
        android:textSize="20sp"
        android:id="@+id/tvSelection"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/tvDeviceName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvSelection"
        android:textSize="24sp"
        android:gravity="center"
        android:text="" />

</RelativeLayout>